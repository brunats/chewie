<div class="row">
  <div class="col-12">
    <h2>
      <%= t('.title') %>
    </h2>
  </div>
</div>
<div class="row">
  <%= form_for @order, url: orders_path, method: :post do |f| %>
    <div class="row">
      <%= f.label :customer %>
      <%= f.select :customer_id, Customer.order(:name).collect { |p| [ p.name, p.id ] } %>
    </div>

    <table class="table table-striped table-borderless">
      <thead>
        <tr class="align-middle">
          <th scope="col">#</th>
          <th scope="col"><%= Product.human_attribute_name(:name) %></th>
          <th scope="col"><%= Product.human_attribute_name(:multiple) %></th>
          <th scope="col"><%= Product.human_attribute_name(:price) %></th>
          <th scope="col"><%= OrderProduct.human_attribute_name(:unit_price) %></th>
          <th scope="col"><%= OrderProduct.human_attribute_name(:units) %></th>
        </tr>
      </thead>
      <tbody>
        <%= render(partial: 'product', collection: Product.order(:name)) %>
      </tbody>
    </table>

    <%= f.submit t('.create') %>
  <% end %>
</div>
