<div class="row">
  <div class="col-10">
    <h2>
      <%= Order.model_name.human(count: @orders.count) %>
    </h2>
  </div>
  <div class="col-2">
    <%= link_to new_order_path, class: 'btn btn-outline-primary' do %>
      <%= fa_icon('plus') %>
    <% end %>
  </div>
</div>

<div class="row">
  <table class="table table-striped table-borderless">
    <thead>
      <tr class="align-middle">
        <th scope="col">#</th>
        <th scope="col"><%= Order.human_attribute_name(:customer) %></th>
        <th scope="col"><%= OrderProduct.model_name.human(count: 2) %></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <%= render(partial: 'order', collection: @orders) %>
    </tbody>
  </table>
</div>
