<tr id="<%= "order#{order.id}" %>">
  <th class="align-middle" scope="row"><%= order.id %></th>
  <td class="align-middle"><%= order.customer.name %></td>
  <td class="align-middle"><%= order.order_products.count %></td>
  <td class="align-middle">
    <%= link_to edit_order_path(order), class: 'btn btn-outline-primary' do %>
      <%= fa_icon('pencil') %>
    <% end %>
    <%= link_to order_path(order), class: 'btn btn-outline-danger', method: :delete do %>
      <%= fa_icon('trash') %>
    <% end %>
  </td>
</tr>
