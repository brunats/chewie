<div class="row">
  <div class="col-10">
    <h2>
      <%= t('.title', id: @order.id) %>
    </h2>
  </div>
  <div class="col-2">
    <%= link_to root_path, class: 'btn btn-outline-primary' do %>
      <%= t('.back') %>
    <% end %>
  </div>
</div>

<%= form_for @order, url: order_path(@order.id), method: :patch do |f| %>
  <%= render(partial: 'form', locals: { order: @new_order, f: f }) %>

  <div class="col-12 text-center">
    <%= f.submit t('.save') %>
  </div>
<% end %>
