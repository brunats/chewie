<div class="row">
  <div class="col-10">
    <h2>
      <%= t('.title', id: @order.id) %>
    </h2>
  </div>
  <div class="col-2">
    <%= link_to root_path, class: 'btn btn-outline-primary' do %>
      Voltar
    <% end %>
  </div>
</div>

<%= form_for @order, url: order_path(@order.id), method: :patch do |f| %>
  <div class="form-group row">
    <div class="col-6 text-right font-weight-bold">
      <%= f.label :customer, html: {class: 'col-sm-2 col-form-label'}, :selected => @order.customer.id%>
    </div>
    <div class="col-6">
      <%= f.select :customer_id, Customer.order(:name).collect { |p| [ p.name, p.id ] }, html: {class: 'form-control'}%>
    </div>
  </div>
  <div class="col-12 text-center">
    <%= f.submit t('.save') %>
  </div>
<% end %>
